// 1物理像素
border-1px-top(color) 
  position relative
  
  &::before
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 1px
    background-color color
    
    @media (-webkit-min-device-pixel-ratio: 2) 
        transform scaleY(.5)
    
    @media (-webkit-min-device-pixel-ratio: 3) 
        transform scaleY(.333333)

border-1px-bottom(color) 
  position relative
  
  &::after
    content ""
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background-color color
    
    @media (-webkit-min-device-pixel-ratio: 2) 
        transform scaleY(.5)
    
    @media (-webkit-min-device-pixel-ratio: 3) 
        transform scaleY(.333333)
      
// 清除浮动
clearFix()
  *zoom 1
  &::before, &::after
    content ''
    display table
  &::after
    clear both